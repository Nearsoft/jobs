root = true

# General (for all files):
#   * utf-8 character encoding
#   * unix-style newlines
#   * newline ending for every file
#   * no trailing whitespace
#   * space indentation
#   * 2 space indent
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
